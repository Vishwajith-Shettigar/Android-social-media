<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="50dp"
    android:padding="5dp"




    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
app:cardCornerRadius="40dp"
     android:id="@+id/cardglobal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"

        >
<ImageView
    android:id="@+id/imageglobal"
    android:layout_width="40dp"
    android:layout_height="40dp"
android:src="@drawable/ic_launcher_foreground"
    android:background="@drawable/ic_launcher_background"
    android:scaleType="centerCrop"
    />

    </androidx.cardview.widget.CardView>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:layout_toLeftOf="@+id/cardglobal"
    android:background="@drawable/senderchardrawebale"
android:id="@+id/layoutformessage"

    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
android:textSize="10sp"
      android:text="Dark_vish"
      android:padding="7dp"
android:paddingBottom="10dp"
      android:id="@+id/namesender"
      android:layout_alignTop="@id/sendermessage"
      android:layout_alignParentTop="true"

      />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:text=" h"

        android:textSize="18sp"
        android:textColor="@color/white"
        android:paddingLeft="35dp"
        android:paddingRight="25dp"
        android:paddingTop="7dp"
        android:paddingBottom="27dp"
        android:id="@+id/sendermessage"
        android:layout_margin="10dp"



        />
    <TextView
        android:id="@+id/timesendrmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:56 pm"
    android:layout_marginTop="10dp"
      android:textColor="@color/white"
android:textSize="10sp"

        android:layout_toRightOf="@id/sendermessage"
android:layout_alignBottom="@+id/sendermessage"
        android:padding="7dp"
        android:layout_marginLeft="-70dp"

        />

</RelativeLayout>

</RelativeLayout>