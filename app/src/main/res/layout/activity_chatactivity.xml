<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Chatactivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:id="@+id/chatto0lbar"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/likesbackbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:layout_centerVertical="true"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Chats"
                android:textSize="25dp"
                android:textColor="@color/black"

                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/likesbackbtn"
                />
            <ImageView
                android:id="@+id/globalchatbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/globechat"
                android:layout_centerVertical="true"
android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"

                />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/chatsrecycler"

        android:padding="5dp"

        android:layout_below="@+id/chatto0lbar"


        />




</RelativeLayout>