<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Commentactivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
android:layout_marginTop="0dp"
        android:id="@+id/commnetstoolbar"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

<ImageView
    android:id="@+id/commnectbackbtn"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/back"
android:layout_centerVertical="true"


    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:layout_centerVertical="true"
    android:text="Comments"
    android:textSize="25dp"
    android:textColor="@color/black"

    android:layout_marginLeft="15dp"
    android:layout_toRightOf="@+id/commnectbackbtn"
    />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/commnetsrecyclerview"
android:layout_below="@id/commnetstoolbar"
    android:padding="5dp"

    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:id="@+id/commnettextandbtrn"
android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:layout_below="@+id/commnetsrecyclerview"
>

        <EditText
            android:id="@+id/commenttext"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:hint="Enter your comment"
            android:textColor="@color/black"
            android:textColorHint="#787474"

            />


<com.google.android.material.button.MaterialButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:id="@+id/cmtsendbtn"

    android:text="send"
    android:layout_toRightOf="@+id/commenttext"

    />

    </RelativeLayout>

</RelativeLayout>