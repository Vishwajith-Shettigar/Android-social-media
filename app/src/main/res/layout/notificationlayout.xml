<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="6dp"

    >
    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/relativelayoutofuserandtext"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="45dp"
            android:id="@+id/noticardview"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"

            >
            <ImageView
                android:id="@+id/notiimage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_launcher_foreground"
                android:background="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                />



        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/noticardview"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notiusername"
                android:text="vishwajit shettigar"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/notitext"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notiusername"
                android:text="has liked you post"

                />


        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#797575"
        android:layout_below="@+id/relativelayoutofuserandtext"
        />
</RelativeLayout>