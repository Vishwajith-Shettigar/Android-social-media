<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginTop="20dp"
    android:padding="5dp"
    android:background="@drawable/singlepostback"
    android:elevation="6dp"

    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:id="@+id/toppostsec"



    >

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:layout_marginLeft="15dp"
    app:cardCornerRadius="45dp"
    android:id="@+id/cardviewdp"
 android:layout_centerVertical="true"
    android:layout_marginRight="15dp"
    android:elevation="6dp"
    >
<ImageView
    android:id="@+id/userdp"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:src="@drawable/ic_launcher_foreground"
    android:background="@drawable/ic_launcher_background"
android:scaleType="centerCrop"
   />



</androidx.cardview.widget.CardView>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_toRightOf="@id/cardviewdp"
android:id="@+id/relativeusert"
    android:gravity="center"
    >

    <TextView

        android:textColor="@color/black"
        android:layout_marginRight="10dp"
        android:id="@+id/postusername"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vishwajith shettigar"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_below="@+id/postusername"
android:id="@+id/time"
        android:text="two minutes ago"
        android:textColor="#999595"
        />
</RelativeLayout>


    <ImageView
        android:id="@+id/threedot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:src="@drawable/threedot"
android:layout_marginLeft="-40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/relativeusert"

        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="20dp"
        >



        <com.google.android.exoplayer2.ui.PlayerView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/postvideo"

            />

        <ImageView
            android:id="@+id/postimage"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"


            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

<ImageView
    android:id="@+id/likebtn"
    android:layout_width="35dp"
    android:layout_height="35dp"

android:src="@drawable/favourite_unfilled"
android:layout_centerVertical="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="5dp"
    />
        <TextView
            android:id="@+id/likescount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/likebtn"

android:text="1000"
            android:textColor="@color/black"
android:layout_marginRight="10dp"

            />



        <ImageView
            android:id="@+id/commentbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
android:src="@drawable/commneticon"
            android:layout_centerVertical="true"
android:layout_toRightOf="@id/likescount"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/comcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/commentbtn"

            android:text="1000"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"

            />
    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    >

    <TextView
        android:id="@+id/posttext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:textColor="#7D7D7D"
android:text="hii in am android what about you and how do you do today.

fine lets talk tomorrow"

        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
android:background="#D8D2D2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
</LinearLayout>

</RelativeLayout>